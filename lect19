#include<iostream>
#include<vector>
using namespace std;

// Two Sum Problem by Two Pointer 
class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        //code here
		vector<int>ans;
		int n = nums.size()-1;
		int start =0 , end=n;
		while(start<end){
			if(nums[start]+nums[end]==target){
				ans.push_back(start+1);
				ans.push_back(end+1);
				return ans;
			}
			else if(nums[start]+nums[end]<target){
				start++;
			}
			else{
				end--;
			}
		}
		return ans;
    }
};

// Triplet Sum in Array
bool hasTripletSum(vector<int> &arr, int target) {
    // Code Here
	int n = arr.size();
	sort(arr.begin(),arr.end());

	for(int i=0; i<n-2; i++){
		int start=i+1, end = n-1, newTarget=target-arr[i];
		while(start<end){
			if(arr[start]+arr[end]==newTarget){
				return true;
			}
			else if(arr[start]+arr[end]<newTarget){
				start++;
			}
			else{
				end--;
			}
		}
	}
	return false;
}

// Four Sum
bool find4Numbers(vector<int>& A, int X) {
    int n = A.size();
	sort(A.begin() ,A.end());

	for(int i=0; i<n-3; i++){
		for(int j=i+1; j<n-2; j++){
			int start=j+1 , end=n-1, newTarget=X-A[i]-A[j];
			while(start<end){
			if(A[start]+A[end]==newTarget){
				return true;
			}
			else if(A[start]+A[end]<newTarget){
				start++;
			}
			else{
				end--;
			}
			}
		}
	}
	return false;
}

//  Pair With Given Difference
 int pairWithGivenDifference(vector<int>& arr, int diff) {
    // Your code here
	sort(arr.begin(), arr.end());
	int start = 0, end=0, n = arr.size() ;

	while(start<=end && end<n){
		if(arr[end]-arr[start]==diff){
			return 1;
		}
		else if (arr[end]-arr[start]<diff){
			end++;
		}
		else{
			start++;
		}
	}
	return 0;
    
}

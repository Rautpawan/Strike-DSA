#include <iostream>
using namespace std;

int main(){
    char c= 'a'+1;
    cout << c <<endl;
    int p = 'a'+1;
    cout << p;

    int a=10;
    int b=20;
    cout << a+b << endl;
    cout << b-a << endl;
    cout << b*a << endl;
    cout << b/a << endl;
    cout << b%a << endl; 

    // left shift
    a= a<<3;
    cout << a << endl; //a= a*2^3
    // right shift
    a= a>>3;// a= a/2^3
    cout << a << endl;

    // to find the give number is even or odd
    int n;
    cout << "Enter a number:";
    cin >> n;
    if(n % 2 == 0) {
        cout << n << "is even" << endl;
    } else {
        cout << n << "is odd" << endl;
    }

    // to find the maximum number 
    int a, b;
    cout << "Enter number a:";
    cin >> a;
    cout << "Enter number b: ";
    cin >> b;
    if(a > b) {
        cout << a << " is maximum";
    } else {
        cout << b << " is maximum";
    }

    // Grade Calculator on marks
     int marks;
    cout << "Enter your marks: ";
    cin >> marks;
    if(marks > 100 || marks < 0) {
        cout << "Invalid marks" << endl;
    } else if(marks >= 90) {
        cout << "Grade: A " << endl;
    } else if(marks >= 80) {
        cout << "Grade: B " << endl;;
    } else if(marks >= 70) {
        cout << "Grade: C " << endl;
    } else if(marks >= 60) {
        cout << "Grade: D " << endl;
    } else {
        cout << "Grade: F-Fail" << endl;
    }


    return 0;
}
// Code I did in second lecture of DSA in cpp

#include<iostream>
#include<bits/stdc++.h>
using namespace std;

// Search in Matrix
bool searchMatrix(vector<vector<int>>& matrix, int target) {
    int row=matrix.size(), col = matrix[0].size();

	for(int i=0; i<row; i++){
		for(int j=0; j<col; j++){
			if(matrix[i][j]==target){
			return true;
			}
		}
	}
	return false;
}

// Add Two Matrix
vector<vector<int>> addTwoMatrix(vector<vector<int>>& mat1, vector<vector<int>>& mat2) {
    int rowSize = mat1.size(), colSize = mat1[0].size();

	if(mat1.size() != mat2.size() || mat1[0].size() != mat2[0].size()){
		vector<vector<int>>ans(1, vector<int>(1));
		ans[0][0]=-1;
		return ans;
	}
	
	vector<vector<int>>ans(rowSize, vector<int>(colSize));
	for(int i=0; i<rowSize; i++){
		for(int j=0; j<colSize; j++){
			ans[i][j] = mat1[i][j]+mat2[i][j];
		}
	}
	return ans;
}

//Transpose of Matrix
vector<vector<int>> transpose(vector<vector<int>>& mat) {
    int rowSize = mat.size(), colSize = mat[0].size();

    for (int i = 0; i<rowSize-1; i++) {
        for (int j = i + 1; j<colSize; j++) {
            swap(mat[i][j], mat[j][i]);
        }
    }
    return mat;

}

// 49. Spiral Matrix
vector<int> spiralOrder(vector<vector<int>>& matrix) {
    vector<int>spiral;
	int rowStart = 0, colStart = 0, rowEnd = matrix.size()-1, colEnd = matrix[0].size()-1;

	while(rowStart<=rowEnd && colStart<=colEnd){
	for(int j=colStart; j<=colEnd; j++){
		spiral.push_back(matrix[rowStart][j]);
	}
	rowStart++;

	for(int i=rowStart; i<=rowEnd; i++){
		spiral.push_back(matrix[i][colEnd]);
	}
	colEnd--;

	if(rowStart<=rowEnd){
	for(int j=colEnd; j>=colStart; j--){
		spiral.push_back(matrix[rowEnd][j]);
	}
	rowEnd--;
	}

	if(colStart<=colEnd){
	for(int i=rowEnd; i>=rowStart; i--){
		spiral.push_back(matrix[i][colStart]);
	}
	colStart++;
	}

	}
	 return spiral;
}


// Search in Sorted Matrix-I
bool searchMatrix(vector<vector<int>>& matrix, int target) {
	int rowSize = matrix.size(), colSize = matrix[0].size();
    int start = 0, end= rowSize * colSize-1;

	while(start <= end){
		int mid = start + (end-start)/2;

		int rowIndex = mid/colSize;
		int colIndex = mid%colSize;
		 if(matrix[rowIndex][colIndex]==target){
			return true;
		 }
		 else if(matrix[rowIndex][colIndex]<target){
			start = mid+1;
		 }
		 else{
			end = mid-1;
		 }
	}
	return false;
}

// Rotate Image
void rotate(vector<vector<int>>& matrix) {
	int rowStart = 0, rowEnd=matrix[0].size()-1;

	int rowSize = matrix.size() , colSize= matrix[0].size();

	for(int i=0; i<rowSize-1; i++){
		for(int j=i+1; j<colSize; j++){
			swap(matrix[i][j],matrix[j][i]);
		}
	}
 int colStart=0, colEnd=matrix[0].size()-1;
	while(colStart<colEnd){
		for(int i=0; i<rowSize; i++){
			swap(matrix[i][colStart],matrix[i][colEnd]);
		}
		colStart++ , colEnd--;
	}

}
